{% extends 'base.html.twig' %}

{% block title %}Hello ListController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 90%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .example-menu { margin: 1em auto; max-width: 800px; width: 10%; font: 18px/1.5 sans-serif; float: left;}
</style>
<div class="example-menu">
<ul>
<li><a href="/list/reservations">Reservations List</a></li>
<li><a href="/create/createproduct">Add Product</a></li>
<li><a href="/create/createreservation">Add Reservation</a></li>
</ul>
</div>

<div class="example-wrapper">
    <h1>Products List</h1>
    <table>
    <tr>
        <th>Product name</th>
        <th>Base Price</th>
        <th>Final Price</th>
        <th></th>
    </tr>
        {% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.basePrice }}</td>
                <td>{{ product.finalPricesSum }}</td>
                <td><a href="/edit/editproduct/{{ product.id }}">Edit</a></td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
